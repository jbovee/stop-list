{
	"manifest_version": 2,
	"name": "Stop List",
	"description": "Open a YouTube playlist in a new tab, removing the playlist part of the url.",
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"version": "1.3",

	"background": {
		"scripts": ["eventPage.js"],
		"persistent": false
	},
	"icons": {
		"16": "/images/icon16.png",
		"19": "/images/icon19.png",
		"38": "/images/icon38.png",
		"48": "/images/icon48.png",
		"128": "/images/icon128.png"
	},
	"permissions": [
		"contextMenus",
		"storage",
		"tabs"
	]
}